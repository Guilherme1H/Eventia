<?xml version="1.0" encoding="utf-8"?>
<!-- Este arquivo define a aparência dos campos de texto do aplicativo -->
<shape xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Fundo da caixa. Usamos um cinza um pouco mais claro que o fundo da tela. -->
    <solid android:color="@color/medium_gray" />

    <!-- CONTORNO/BORDA da caixa. Esta é a parte mais importante! -->
    <stroke
        android:width="1dp"
        android:color="@color/light_gray" />

    <!-- Cantos arredondados, para manter o estilo do app. -->
    <corners android:radius="12dp" />

</shape>