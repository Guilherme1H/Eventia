<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.Eventia" parent="Theme.Material3.Dark.NoActionBar">

        <item name="colorPrimary">@color/primary_brand</item>
        <item name="colorPrimaryVariant">@color/primary_brand</item>
        <item name="colorOnPrimary">@color/text_primary</item>

        <item name="colorSecondary">@color/accent_brand</item>
        <item name="colorSecondaryVariant">@color/accent_brand</item>
        <item name="colorOnSecondary">@color/text_primary</item>

        <item name="android:windowBackground">@color/background_app</item>

        <item name="colorSurface">@color/surface_card</item>
        <item name="colorOnSurface">@color/text_primary</item>

        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>

        <item name="android:statusBarColor">@color/background_app</item>
        <item name="android:navigationBarColor">@color/background_app</item>

        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="fontFamily">@font/poppins_regular</item>

        <item name="textAppearanceHeadlineLarge">@style/TextAppearance.Eventia.HeadlineLarge</item>
        <item name="textAppearanceTitleLarge">@style/TextAppearance.Eventia.TitleLarge</item>

    </style>
    <style name="TextAppearance.Eventia.HeadlineLarge" parent="TextAppearance.Material3.HeadlineLarge">
        <item name="fontFamily">@font/poppins_bold</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
    </style>

    <style name="TextAppearance.Eventia.TitleLarge" parent="TextAppearance.Material3.TitleLarge">
        <item name="fontFamily">@font/poppins_bold</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
    </style>

</resources>