<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    app:strokeWidth="0dp"
    app:cardBackgroundColor="@color/surface_card">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Imagem Principal do Evento -->
        <ImageView
            android:id="@+id/image_evento"
            android:layout_width="0dp"
            android:layout_height="180dp"
            android:scaleType="centerCrop"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:srcCompat="@tools:sample/backgrounds/scenic" />

        <!-- Ícone de Favorito -->
        <ImageView
            android:id="@+id/icon_favorito"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_favorite"
            android:padding="12dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:tint="@color/white"
            app:layout_constraintTop_toTopOf="@id/image_evento"
            app:layout_constraintEnd_toEndOf="@id/image_evento"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="4dp"
            android:contentDescription="Favoritar evento"/>

        <!-- Título do Evento -->
        <TextView
            android:id="@+id/text_titulo_evento"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="16dp"
            android:textAppearance="@style/TextAppearance.Material3.TitleLarge"
            android:textColor="@color/text_primary"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/image_evento"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="Nome do Evento Muito Longo Para Testar Quebra de Linha" />

        <!-- Data e Hora do Evento -->
        <ImageView
            android:id="@+id/icon_data"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/ic_calendar"
            app:tint="@color/text_secondary"
            app:layout_constraintTop_toBottomOf="@id/text_titulo_evento"
            app:layout_constraintStart_toStartOf="@id/text_titulo_evento"
            android:contentDescription="Data do evento"/>

        <TextView
            android:id="@+id/text_data_evento"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
            android:textColor="@color/text_secondary"
            app:layout_constraintStart_toEndOf="@id/icon_data"
            app:layout_constraintEnd_toEndOf="@id/text_titulo_evento"
            app:layout_constraintTop_toTopOf="@id/icon_data"
            app:layout_constraintBottom_toBottomOf="@id/icon_data"
            tools:text="28 de Dezembro, 2025 ・ 22:00" />

        <!-- Local do Evento -->
        <ImageView
            android:id="@+id/icon_local"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"
            android:src="@drawable/ic_location"
            app:tint="@color/text_secondary"
            app:layout_constraintTop_toBottomOf="@id/icon_data"
            app:layout_constraintStart_toStartOf="@id/text_titulo_evento"
            app:layout_constraintBottom_toBottomOf="parent"
            android:contentDescription="Local do evento"/>

        <TextView
            android:id="@+id/text_local_evento"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
            android:textColor="@color/text_secondary"
            app:layout_constraintStart_toEndOf="@id/icon_local"
            app:layout_constraintEnd_toStartOf="@id/text_preco_evento"
            app:layout_constraintEnd_toEndOf="@id/text_titulo_evento"
            app:layout_constraintTop_toTopOf="@id/icon_local"
            app:layout_constraintBottom_toBottomOf="@id/icon_local"
            tools:text="Espaço Unimed, São Paulo - SP" />

        <!-- ***** NOVO: TEXTO DO PREÇO ***** -->
        <TextView
            android:id="@+id/text_preco_evento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:background="@drawable/background_preco"
            android:paddingHorizontal="10dp"
            android:paddingVertical="4dp"
            android:textColor="@color/primary_brand"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/text_local_evento"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/text_local_evento"
            tools:text="R\$ 99,90" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>