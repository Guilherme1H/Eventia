<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    android:fillViewport="true"
    tools:context=".CadastroActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp">

        <ImageButton
            android:id="@+id/backButtonCadastro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Voltar"
            android:padding="8dp"
            android:src="@drawable/ic_arrow_back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/white" />

        <TextView
            android:id="@+id/title_cadastro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:fontFamily="@font/poppins_bold"
            android:text="Crie sua Conta"
            android:textColor="@color/white"
            android:textSize="32sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/backButtonCadastro" />

        <!-- Campos do FormulÃ¡rio com HINT (Texto-Guia) -->
        <EditText
            android:id="@+id/nomeEditTextCadastro"
            style="@style/FormEditText"
            android:layout_marginTop="24dp"
            android:hint="Nome Completo"
            android:inputType="textPersonName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/title_cadastro" />

        <EditText
            android:id="@+id/emailEditTextCadastro"
            style="@style/FormEditText"
            android:layout_marginTop="16dp"
            android:hint="E-mail"
            android:inputType="textEmailAddress"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/nomeEditTextCadastro" />

        <EditText
            android:id="@+id/cpfEditTextCadastro"
            style="@style/FormEditText"
            android:layout_width="0dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="16dp"
            android:hint="CPF"
            android:inputType="number"
            app:layout_constraintEnd_toStartOf="@id/telefoneEditTextCadastro"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/emailEditTextCadastro" />

        <EditText
            android:id="@+id/telefoneEditTextCadastro"
            style="@style/FormEditText"
            android:layout_width="0dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:hint="Telefone"
            android:inputType="phone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/cpfEditTextCadastro"
            app:layout_constraintTop_toBottomOf="@id/emailEditTextCadastro" />

        <EditText
            android:id="@+id/dataNascimentoEditTextCadastro"
            style="@style/FormEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="Data de Nascimento (DD/MM/AAAA)"
            android:inputType="date"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cpfEditTextCadastro" />

        <EditText
            android:id="@+id/senhaEditTextCadastro"
            style="@style/FormEditText"
            android:layout_marginTop="16dp"
            android:autofillHints="password"
            android:hint="Senha"
            android:inputType="textPassword"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/dataNascimentoEditTextCadastro" />

        <!-- Resto do arquivo... -->
        <TextView
            android:id="@+id/passwordStrengthTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/poppins_regular"
            android:textSize="12sp"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="@id/senhaEditTextCadastro"
            app:layout_constraintTop_toBottomOf="@id/senhaEditTextCadastro"
            tools:text="A senha deve conter 8 caracteres."
            tools:textColor="@android:color/holo_red_light"
            tools:visibility="visible" />

        <CheckBox
            android:id="@+id/termsCheckBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:buttonTint="@color/purple_brand"
            android:fontFamily="@font/poppins_regular"
            android:text="Li e aceito os Termos de Uso"
            android:textColor="@color/light_gray"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@id/passwordStrengthTextView" />

        <Button
            android:id="@+id/createAccountButtonCadastro"
            style="@style/PrimaryButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Cadastrar"
            app:layout_constraintTop_toBottomOf="@id/termsCheckBox"
            tools:layout_editor_absoluteX="24dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>